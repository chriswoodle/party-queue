{
    "exclude": [
        "./dist",
        "node_modules"
    ],
    "compilerOptions": {
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "./src",
        "allowUnreachableCode": false,
        "declaration": true,
        "declarationMap": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "preserveConstEnums": true,
        "removeComments": true,
        "target": "ES6",
        "inlineSourceMap": true,
        "inlineSources": true,
        "strict": true,
        "pretty": true,
        "lib": [
            "es7"
        ]
    }
}